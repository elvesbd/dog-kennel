{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background}}')">
  {{title}}
</section>

<h2>{{title}} disponíveis para adoção</h2>
{{/banner}}

<div class="container list">
  {{#pets}}
    <div class="item">
      <img src="images/{{ image }}" class="item--image" alt="img" />
      <div class="item--name">{{ name }}</div>
      <div class="item--color">{{ color }}</div>
      <div class="item--genre">{{ sex }}</div>
  </div>
  {{/pets}}
</div>

{{^pets}}
  <div class="container no-list">
    <h2>Não foi encontrado nenhum animal</h2>
  </div>
{{/pets}}

{{>partials/footer}}